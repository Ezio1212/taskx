    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@tsconfig/strictest": "^2.0.7",
    "@types/graceful-fs": "^4.1.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.25",
    "jest": "^30.2.0",
    "rollup": "^4.53.2",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-dts": "^6.2.3",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
