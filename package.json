{
  "name": "@taskx/workspace",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "dev": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript --watch",
    "test": "jest --config jest.config.ts",
    "test:coverage": "jest --config jest.config.ts --coverage",
    "publish:taskx": "npm run prepublish:taskx && npm run publish:taskx:exec",
    "prepublish:taskx": "tsx scripts/prepublish.ts",
    "publish:taskx:exec": "cd packages/taskx && npm publish --//registry.npmjs.org/:_authToken=$NODE_AUTH_TOKEN"
  },
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^30.2.0",
